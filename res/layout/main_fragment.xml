<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
	
    <!--Selection level 1  -->

    <LinearLayout
        android:id="@+id/selection_level1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:attr/panelBackground"
        android:orientation="vertical" >
        
        <!-- contact -->
       	<LinearLayout
	        android:id="@+id/selection_level1_contact"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	       >
	        
        	<ImageButton
        	    android:id="@+id/selection_level1_contact_bn"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_margin="5dip"
        	    android:background="@android:color/transparent"
        	    android:scaleType="center"
        	    android:src="@drawable/ic_contact_list2" />
        </LinearLayout>
        
       	<!-- contact settings-->
		<LinearLayout
	        android:id="@+id/selection_level1_settings"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	       >
       	    
          	<ImageButton
          	    android:id="@+id/selection_level1_settings_bn"
          	    android:layout_width="wrap_content"
          	    android:layout_height="wrap_content"
          	    android:layout_margin="5dip"
          	    android:background="@android:color/transparent"
          	    android:scaleType="center"
          	    android:src="@drawable/ic_settings2" />
          	
        </LinearLayout>
       	
       	
    </LinearLayout>
    
    
     <!--Selection level 2  -->
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_weight="2"
		android:background="#FFF1F1F1"

        >

        <ListView
            android:id="@+id/lstvw_contact"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
       	  
            android:clickable="true" >

        </ListView>
        
    </LinearLayout>
    
     
     <!--Selection level 2  -->
   	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_weight="1"
        android:background="?android:attr/detailsElementBackground"
        >

        <ImageView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            
	        android:scaleType="fitCenter"
	    	android:src="@drawable/ic_launcher"/>
        
    </LinearLayout>

</LinearLayout>