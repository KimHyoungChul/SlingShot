<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="192dp"
    android:layout_height="192dp"
    android:background="@drawable/shape_controlpanel_button_background"
    android:orientation="vertical" >
    
    <ImageView
	   android:id="@+id/diag_outgoing_user_image"
	   android:layout_width="128dp"
	   android:layout_height="fill_parent"
	   android:layout_margin="10dp"
	   android:layout_gravity="center"
	   android:scaleType="fitCenter"
	   />	
	    

	    
	<TextView
		android:id="@+id/diag_outgoing_user_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:textSize="20dip" />
	    
    
	<LinearLayout android:id="@+id/diag_outgoing_layout_cancel"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="true"
        android:background="@drawable/selector_highlight_background">
      <Button
          android:id="@+id/diag_outgoing_btn_cancel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="1dp"
          android:text="@string/diag_outgoing_call_text_btn_cancel"
          android:textColor="@android:color/white"
          android:background="@drawable/button_cisco_red"
          android:layout_gravity="center"/>	
	</LinearLayout>
	
	
