<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:background="@drawable/background_gray_corner_rect">     
	    
	    <TextView android:id="@+id/aquarius_contact_list_title"
	              android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
	              android:gravity="center"
	              android:textColor="@color/white"
	              android:textSize="25sp"
	              android:textStyle="bold"
	              android:paddingBottom="15dp"
	              android:text="@string/aquarius_contact_list_title"
	              />
	    <ListView android:id="@+id/aquarius_contact_list_list"
	              android:layout_width="240dp"
	              android:layout_height="240dp"
	              />
              

	 </LinearLayout>
	
     
 </LinearLayout>